@model App.Web.ViewModels.FAQListViewModel
@{
    Layout = "_Layout";
}
<div class="col-md-12">
<div class="page-wrapper">
<div class="heading">
    <h2 class="title">Frequently Asked Questions (F.A.Qs)</h2>
</div>
<div class="body">
    <p>
        Here are some frequently asked questions.
    </p>
    <div id="accordion">

    @foreach (var faq in Model.FAQs)
    {
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-dark" data-toggle="collapse" data-target="#@faq.ID" aria-expanded="true" aria-controls="collapseOne">
                        @faq.Question
                    </button>
                </h5>
            </div>

            <div id="@faq.ID" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">
                   @faq.Answer
                </div>
            </div>
        </div>
    }

    </div>
</div>
</div>
</div>

